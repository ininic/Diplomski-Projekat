            </Label.RenderTransform>
        </Label>
        <TextBox Name="tb1" HorizontalAlignment="Left" Height="25" Margin="179,44,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Content="Dodaj vezu" HorizontalAlignment="Left" Margin="329,44,0,0" VerticalAlignment="Top" Width="83" Height="25" Click="Button_Click"/>

    </Grid>
</Window>
